<mde:MaterialWindow
    x:Class="LeagueBuddy.Preload.PreloadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LeagueBuddy.Preload"
    xmlns:mde="https://spiegelp.github.io/MaterialDesignExtensions/winfx/xaml"
    Width="200"
    Height="300"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterScreen">
    <Border Margin="10">
        <StackPanel VerticalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14">
                <TextBlock Text="{Binding Notification}" TextWrapping="WrapWithOverflow" />
            </Label>
            <ProgressBar IsIndeterminate="True" Style="{DynamicResource MaterialDesignCircularProgressBar}" />
        </StackPanel>
    </Border>
</mde:MaterialWindow>